<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="village_subdivision_view_form" model="ir.ui.view">
        <field name="name">village.subdivision.view.form</field>
        <field name="model">bmis.village_subdivision</field>
        <field name="arch" type="xml">
            <form string="Village/Subdivision View">
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1"/>
                            <field name="description"/>
                            <field name="barangay_id" domain="[('is_default', '=', True)]"/>
                            <field name="is_default_barangay" widget="boolean_toggle"/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
    <record id="village_subdivision_view_list" model="ir.ui.view">
        <field name="name">village.subdivision.view.list</field>
        <field name="model">bmis.village_subdivision</field>
        <field name="arch" type="xml">
            <tree string="Village/Subdivision List">
                <field name="name" default_focus="1"/>
                <field name="description"/>
                <field name="barangay_id"/>
                <field name="is_default_barangay" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="village_subdivision_view_search" model="ir.ui.view">
        <field name="name">village.subdivision.view.search</field>
        <field name="model">bmis.village_subdivision</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" default_focus="1"/>
                <field name="barangay_id"/>
            </search>
        </field>
    </record>
</odoo>
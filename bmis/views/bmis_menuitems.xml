<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="region_action">
        <field name="name">Regions</field>
        <field name="res_model">bmis.region</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                 Create the first region
            </p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="province_action">
        <field name="name">Province</field>
        <field name="res_model">bmis.province</field>

        <field name="res_model">bmis.city_municipality</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                 Create the first city municipality
            </p>
        </field>
    </record>
    <record model="ir.actions.act_window" id="barangay_action">
        <field name="name">Barangay</field>
        <field name="res_model">bmis.barangay</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                 Create the first barangay
            </p>
        </field>
    </record>
    <menuitem name="BMIS Settings" id="menu_bmis" sequence="1" web_icon="bmis,static/description/icon.png"/>
    <menuitem id="menu_bmis_sub_1" name="Configurations" sequence="1" parent="menu_bmis"/>
    <menuitem id="menu_bmis_sub_2" name="Barangays" sequence="1" parent="menu_bmis_sub_1" action="barangay_action"/>
    <menuitem id="menu_bmis_sub_3" name="City/Municipality" sequence="1" parent="menu_bmis_sub_1" action="city_municipality_action"/>

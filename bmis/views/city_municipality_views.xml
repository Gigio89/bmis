<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="city_municipality_view_form" model="ir.ui.view">
        <field name="name">city_municipality.view.form</field>
        <field name="model">bmis.city_municipality</field>
        <field name="arch" type="xml">
            <form string="City Mmunicipality View">
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1"/>
                            <field name="description"/>
                            <field name="zipcode"/>
                            <field name="province_id"/>
                            <field name="country_id"/>                            
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
    <record id="city_municipality_view_list" model="ir.ui.view">
        <field name="name">city_municipality.view.list</field>
        <field name="model">bmis.city_municipality</field>
        <field name="arch" type="xml">
            <tree string="city municipality List">
                <field name="name"/>
                <field name="description"/>
                <field name="zipcode"/>
                <field name="province_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>
    <record id="city_municipality_view_search" model="ir.ui.view">
        <field name="name">city_municipality.view.search</field>
        <field name="model">bmis.city_municipality</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="zipcode"/>
                <field name="province_id"/>
                <field name="country_id"/>
            </search>
        </field>
    </record>
</odoo>
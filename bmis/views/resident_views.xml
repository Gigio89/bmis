<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="resident_view_form" model="ir.ui.view">
        <field name="name">resident.view.form</field>
        <field name="model">bmis.resident</field>
        <field name="arch" type="xml">
            <form string="Resident View">
                <sheet>

                    <group>
                        <group>
                            <field name="first_name" default_focus="1"  style="font-size: min(4vw, 2.6rem);"/>
                        </group>
                        <group>
                            <field name="last_name" style="font-size: min(4vw, 2.6rem);"/>
                        </group>
                    </group>

                    <group>
                        <group>
                            <field name="addr_detailed"/>
                            <field name="addr_street"/>
                            <field name="addr_barangay"/>
                            <field name="addr_city"/>
                            <field name="addr_province"/>
                            <field name="addr_zip"/>
                            <field name="addr_country"/>
                        </group>
                        <group>
                            <group>
                                <field name="profile_picture" widget="image" options="{'size': [90, 90]}"/>
                                <field name="res_type"  widget="radio"/>
                            </group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Households">
                            <span>This will display all member of the household</span>

                        </page>
                        <page string="Requested Documents">
                            <span>This will display all requested documents</span>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="resident_view_list" model="ir.ui.view">
        <field name="name">resident.view.list</field>
        <field name="model">bmis.resident</field>
        <field name="arch" type="xml">
            <tree string="Resident List">
                <field name="profile_picture" widget="image" options="{'size': [50, 50], 'zoom': true, 'zoom_delay': 1000}" />
                <field name="first_name"/>
                <field name="res_type"/>
                <field name="addr_detailed"/>
                <field name="addr_street"/>
                <field name="addr_barangay"/>
                <field name="addr_city"/>
                <field name="addr_province"/>
                <field name="create_date" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="resident_view_search" model="ir.ui.view">
        <field name="name">resident.view.search</field>
        <field name="model">bmis.resident</field>
        <field name="arch" type="xml">
            <search>
                <field name="first_name"/>
                <field name="addr_detailed"/>
                 <field name="addr_street"/>
                 <field name="addr_barangay"/>
                <field name="addr_city"/>
                <field name="addr_province"/>
            </search>
        </field>
    </record>
</odoo>
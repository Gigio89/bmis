<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="barangay_view_form" model="ir.ui.view">
        <field name="name">barangay.view.form</field>
        <field name="model">bmis.barangay</field>
        <field name="arch" type="xml">
            <form string="Barangay View Form">
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1"/>
                            <field name="description"/>
                            <field name="city_municipality_id"/>                            
                            <field name="zipcode"/>
                            <field name="province_id"/>
                            <field name="country_id" domain="[('code','=','PH')]"/>
                            <field name="is_default"/>                            
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
    <record id="barangay_view_list" model="ir.ui.view">
        <field name="name">barangay.view.list</field>
        <field name="model">bmis.barangay</field>
        <field name="arch" type="xml">
            <tree string="Barangay View List">
                <field name="name" default_focus="1"/>
                <field name="description"/>
                <field name="city_municipality_id"/>
                <field name="zipcode"/>
                <field name="province_id"/>
                <field name="country_id"/>
                <field name="is_default"/>
            </tree>
        </field>
    </record>
    <record id="barangay_view_search" model="ir.ui.view">
        <field name="name">barangay.view.search</field>
        <field name="model">bmis.barangay</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="city_municipality_id"/>
                <field name="zipcode"/>
                <field name="province_id"/>
                <field name="country_id"/>
                <field name="is_default"/>
            </search>
        </field>
    </record>
</odoo>
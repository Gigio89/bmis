<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="province_view_form" model="ir.ui.view">
        <field name="name">province.view.form</field>
        <field name="model">bmis.province</field>
        <field name="arch" type="xml">
            <form string="Province View">
                <sheet>
                    <group>
                        <group>
                            <field name="name" default_focus="1"/>
                            <field name="province_id" domain="[('country_id', '=', 'Philippines')]"/>
                            <field name="description"/>                            
                            <field name="country_id" />
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
    <record id="province_view_list" model="ir.ui.view">
        <field name="name">province.view.list</field>
        <field name="model">bmis.province</field>
        <field name="arch" type="xml">
            <tree string="Province List">
                <field name="name"/>
                <field name="province_id"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>
    <record id="province_view_search" model="ir.ui.view">
        <field name="name">province.view.search</field>
        <field name="model">bmis.province</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="province_id"/>
                <field name="country_id"/>
            </search>
        </field>
    </record>
</odoo>
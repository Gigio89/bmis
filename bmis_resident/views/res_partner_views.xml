<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bmis_resident_form_inherit" model="ir.ui.view">
        <field name="name">view.bmis.resident.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>       
        <field name="arch" type="xml">
            <data>
                <xpath expr="//form[1]/sheet[1]/group[1]/group[1]" position="before">
                    <group>
                        <span class="o_form_label o_td_label" name="first_name">Complete Name</span>
                        <div class="o_row o_row_readonly">
                            <field name="first_name" placeholder="First Name" default_focus="1" groups="base.group_user"/>
                            <field name="middle_name" placeholder="Middle Name" groups="base.group_user"/>
                            <field name="last_name" placeholder="Last Name" groups="base.group_user"/>
                        </div>
                        <label for="birthday" class="oe_inline"/>
                        <div class="o_row o_row_readonly">
                            <field name="birthday" groups="base.group_user"/>
                        </div>
                        <label for="age" class="oe_inline"/>
                        <div class="o_row o_row_readonly">
                            <field name="age" groups="base.group_user" stored="True" copied="False" force_save="True"/>
                        </div>                        
                        <label for="gender" class="oe_inline"/>
                        <div class="o_row o_row_readonly">
                            <field name="gender" groups="base.group_user"/>
                        </div>
                        <label for="civil_status" class="oe_inline"/>
                        <div class="o_row o_row_readonly">
                            <field name="civil_status" widget="radio" options="{'horizontal': true}" groups="base.group_user"/>
                        </div>
                    </group>
                </xpath>
                <!--<xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" invisible="1"/>
                </xpath>-->
                <xpath expr="//field[@name='website']" position="replace">
                    <field name="website" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='title']" position="replace">
                    <field name="title" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='category_id']" position="replace">
                    <field name="category_id" invisible="1"/>
                </xpath>
                <xpath expr="//span[@name='address_name']" position="replace">
                    <span class="o_form_label o_td_label" name="address_name">
                        <field name="type" invisible="not is_company" readonly="user_ids" required="1" class="fw-bold"/>
                        <b>Address</b>
                    </span>
                </xpath>
                <xpath expr="//field[@name='vat']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='street']" position="attributes"> 
                    <attribute name="placeholder">Block and Lot No.</attribute>
                </xpath>
                <xpath expr="//field[@name='street2']" position="attributes"> 
                    <attribute name="placeholder">Barangay</attribute>
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//field[@name='function']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/div[not(@name)][1]/h1[1]/field[@name='name'][2]" position="attributes">
                    <attribute name="force_save">1</attribute>
                    <attribute name="readonly">True</attribute>
                </xpath>
                <xpath expr="//templates/t[1]/div[1]/div[2]/div[1]" position="replace"/>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]" position="attributes">
                    <attribute name="string">Resident</attribute>
                    <attribute name="context">{'default_parent_id': id, 'default_household_type':'member', 'default_street': street,'default_street_id': street_id, 'default_lang': lang, 'default_user_id': user_id, 'default_type': 'other'}</attribute>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/field[@name='type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/field[@name='parent_id']" position="after">
                    <field name="household_type" class="o_address_household_type" widget="radio" options="{'horizontal': true}"/>
                </xpath>
                
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]" position="attributes">
                    <attribute name="string">Resident</attribute>
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/div[1]" position="replace">
                    <div class="text-muted oe_edit_only">
                        <p class="mb-0" invisible="household_type != 'head'">
                        <span>Select if the person is a Household Head</span>
                        </p>
                        <p class="mb-0" invisible="household_type != 'member'">
                            <span>Select if the person is a household member</span>
                        </p>
                    </div>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/group[1]/group[1]/field[1]" position="attributes">
                    <attribute name="string">Resident Name</attribute> 
                </xpath>

                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/group[1]/group[1]/field[1]" position="after">
                    <field name="first_name" placeholder="First Name" default_focus="1" groups="base.group_user"/>
                    <field name="middle_name" placeholder="Middle Name" groups="base.group_user"/>
                    <field name="last_name" placeholder="Last Name" groups="base.group_user"/>
                </xpath>                    
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/group[1]/group[1]/div[1]/div[1]" position="replace">
                    <field name="street"/>
                    <field name="street_id"/>
                    <field name="village_subdivision_id"/>
                    <field name="barangay_id"/>
                    <field name="city_municipality_id"/>
                    <field name="zip"/>
                    <field name="province_id"/>
                </xpath>
                <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/form[1]/sheet[1]/group[1]/group[2]/field[1]" position="before">
                    <field name="avatar_128" invisible="1"/>
                    <field name="image_1920" widget="image" class="oe_avatar" options="{&quot;preview_image&quot;: &quot;avatar_128&quot;}"/>
                    <field name="birthday"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="civil_status"/>
                </xpath>
                <xpath expr="//form/sheet/div/field[@name='company_type']" position="replace">
                    <field name="household_type" options="{'horizontal': true}" widget="radio"/>
                </xpath>
                <xpath expr="//form/sheet/div/div/field[@name='parent_id']" position="attributes">
                    <attribute name="domain">[('household_type', '=', 'head')]</attribute>
                    <attribute name="invisible">household_type == 'head'</attribute>
                    <attribute name="placeholder">Household Head</attribute>
                </xpath>
                
                <field name="street2" position="before">
                    <field name="street_id" placeholder="Street" class="o_address_street"/>
                    <field name="village_subdivision_id" placeholder="Village/Subdivision" class="o_address_village"/>
                </field>
                <field name="city" position="attributes">
                    <attribute name="readonly">street2</attribute>
                    <attribute name="placeholder">City/Municipality</attribute>
                </field>
                <field name="state_id" position="attributes">
                    <attribute name="readonly">street2</attribute>
                    <attribute name="placeholder">Province/Region</attribute>
                </field>
                <field name="zip" position="attributes">
                    <attribute name="readonly">street2</attribute>
                    <attribute name="placeholder">Zipcode</attribute>
                </field>
                <field name="country_id" position="attributes">
                    <attribute name="readonly">street2</attribute>
                    <attribute name="placeholder">Zipcode</attribute>
                </field>
                <page name="contact_addresses" position="attributes">
                    <attribute name="string">Household members</attribute>
                </page>
                <page name="sales_purchases" position="attributes">
                    <attribute name="string">Documents</attribute>
                </page>
                <page name="internal_notes" position="before">
                    <page name="resident_transactions" string="Transactions">
                        <field name="comment" placeholder="Internal notes..."/>
                    </page>
                    <page name="resident_memberships" string="Society Sectors">
                        <field name="comment" placeholder="Internal notes..."/>
                    </page>
                </page>
                <!-- kanban -->
                    <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/kanban[1]/templates[1]/t[1]/div[1]/div[2]/div[2]" position="replace">
                        <div class="oe_kanban_details">
                            <div t-if="record.street.raw_value and record.street_id.raw_value">
                                <field name="street" string="Block/Lot"/>
                                <span invisible="not street">, </span>
                                <field name="street_id" string="Street"/>
                            </div>
                            <div t-if="record.email.raw_value">
                                <field name="email" widget="email" on_change="1"/>
                            </div>
                            <div t-if="record.mobile.raw_value">
                                <t t-esc="record.mobile.value"/>
                            </div>
                            <div t-if="record.phone.raw_value">
                                <t t-esc="record.phone.value"/>
                            </div>
                            
                            <!-- <div t-if="record.village_subdivision_id.raw_value">
                                <t t-esc="record.village_subdivision_id.value"/>
                            </div>
                            <div t-if="record.barangay_id.raw_value">
                                <t t-esc="record.barangay_id.value"/>
                            </div>
                            <div t-if="record.city_municipality_id.raw_value and record.zip.value and record.province_id.value">
                                <t t-esc="record.city_municipality_id.value"/>, <t t-esc="record.zip.value"/>, <t t-esc="record.province_id.value"/>
                            </div>-->
                            
                        </div>
                    </xpath>
                    <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/kanban[1]/templates[1]/t[1]/div[1]/div[2]/div[1]/field[@name='email']" position="replace"/>
                    <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/kanban[1]/templates[1]/t[1]/div[1]/div[2]/div[3]" position="replace"/>
                    <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/kanban[1]/templates[1]/t[1]/div[1]/div[2]/div[3]" position="replace"/>
                   
                    <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[1]/kanban[1]/field[1]" position="after">
                        <field name="street_id"/>
                        <field name="village_subdivision_id"/>
                        <field name="barangay_id"/>
                        <field name="city_municipality_id"/>
                        <field name="province_id"/>
                    </xpath>
            </data> 
        </field>
    </record>
    <record id="view_bmis_resident_list_inherit" model="ir.ui.view">
        <field name="name">view.bmis.resident.list.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>       
        <field name="arch" type="xml">
            <data>
                <field name="display_name" position="replace">
                    <field name="name"/>
                </field>
                <field name="phone" position="before">
                    <field name="street" string="Block/Lot"/>
                    <field name="street_id" string="Street"/>
                    <field name="street2" string="Barangay"/>
                    <field name="village_subdivision_id" string="Village/Subdivision" invisible="not village_subdivision_id"/>
                    <field name="barangay_id" string="Barangay"/>
                    <field name="city_municipality_id" string="City/Municipality"/>
                    <field name="province_id" string="Province"/>
                    <field name="mobile" string="Mobile"/>                    
                </field>
                <field name="email" position="replace"/>
                <field name="phone" position="replace"/>
                <field name="user_id" position="replace"/>
                <field name="city" position="replace"/>
                <field name="country_id" position="replace"/>
            </data>
        </field>
    </record>
    <record id="view_bmis_resident_kanban_inherit" model="ir.ui.view">
        <field name="name">view.bmis.resident.kanban.inherit</field>
        <field name="model">res.partner</field>        
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>       
        <field name="arch" type="xml">
            <data>
                <xpath expr="//kanban/field[20]" position="after">
                    <field name="name"/>
                    <field name="street"/>
                    <field name="street_id"/>
                    <field name="village_subdivision_id"/>
                    <field name="barangay_id"/>
                    <field name="city_municipality_id"/>
                    <field name="province_id"/>
                    <field name="phone"/>
                    <field name="mobile"/>
                </xpath>
                <xpath expr="//kanban/templates/t[1]/div[1]/div[2]/div[1]/ul" position="replace">
                    <ul>
                        <li t-if="record.street.raw_value"><i class="fa fa-map-marker"/>  <field name="street" field_id="street_1"/>, <field name="street_id" field_id="street2_1"/></li>
                        <li t-if="record.village_subdivision_id.raw_value"><field name="village_subdivision_id" field_id="village_subdivision_id_1"/></li>
                        <li t-if="record.barangay_id.raw_value"><field name="barangay_id" field_id="barangay_id_1"/></li>
                        <li t-if="record.city_municipality_id.raw_value and record.province_id.raw_value"><field name="city_municipality_id" field_id="city_municipality_id_1"/>, <field name="province_id" field_id="province_id_1"/></li>
                        <li t-if="record.mobile.raw_value"><i class="fa fa-mobile"/> <field name="mobile" field_id="mobile_id_1"/></li>
                    </ul>
                </xpath>
                <xpath expr="//kanban/templates/t[1]/div[1]/div[2]/div[1]/strong/field[@name='display_name']" position="replace">
                    <field name="name"/>
                </xpath>                
            </data>
        </field>        
    </record>
    <record id="bmis_resident_res_partner_search_view" model="ir.ui.view">
        <field name="name">bmis.resident.res.partner.search.view</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <search string="Residents">
                <field name="name"/>
                <field name="household_type"/>
                <field name="street_id"/>
                <field name="village_subdivision_id"/>
                <field name="barangay_id"/>
                <field name="city_municipality_id"/>
                <field name="province_id"/>
                <searchpanel>
                    <field name="street_id" enable_counters="1" icon="fa fa-road"/>
                    <field name="household_type" enable_counters="1" icon="fa fa-home"/>
                    <field name="gender" enable_counters="1" icon="fa fa-transgender"/>
                    <field name="civil_status" enable_counters="1" icon="fa fa-heart"/>
                </searchpanel>
            </search>
        </field>
                        
    </record>
</odoo>
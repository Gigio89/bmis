<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bmis_resident_detail_form_inherit" model="ir.ui.view">
        <field name="name">view.bmis.resident.detail.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>       
        <field name="arch" type="xml">
            <data>
               <xpath expr="//form[1]/sheet[1]/group/group[2]" position="inside">
                    <field name="civil_status" class="o_address_birthday"/>
                </xpath>
            </data>
            <field name="street2" position="before">
                <field name="street_id" placeholder="Street" class="o_address_street"/>
                <field name="village_subdivision_id" placeholder="Village/Subdivision" class="o_address_village"/>
            </field>
            <field name="email" position="before">                
                <field name="birthday" class="o_address_birthday" placeholder="Birthday"/>
            </field>
        </field>
    </record>    
</odoo>